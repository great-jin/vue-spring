<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.greatinvincible.mapper.UserMapper">

    <resultMap type="xyz.greatinvincible.entity.User" id="userResult">
        <id property="ID" column="id" />
        <result property="accountCode" column="account_code"/>
        <result property="userName" column="username"/>
        <result property="password" column="password"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>

    <select id="list" resultMap="userResult">
        select * from tb_user
    </select>

    <select id="get" resultMap="userResult" parameterType="String">
        select * from tb_user
        where account_code = #{ code }
    </select>

    <select id="getUserByCode" resultMap="userResult" parameterType="xyz.greatinvincible.entity.User">
        select * from tb_user
        where account_code = #{ accountCode }
    </select>

    <update id="update" parameterType="xyz.greatinvincible.entity.User">
        update tb_user
        set username = #{ userName }
        where account_code = #{ accountCode }
    </update>

</mapper>